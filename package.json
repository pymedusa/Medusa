{
  "name": "Medusa",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PyMedusa/Medusa.git"
  },
  "bugs": {
    "url": "https://github.com/PyMedusa/Medusa/issues"
  },
  "homepage": "https://github.com/PyMedusa/Medusa#readme",
  "scripts": {
    "test": "xo",
    "security": "snyk test",
    "build": "./node_modules/grunt-cli/bin/grunt"
  },
  "devDependencies": {
    "grunt": "^0.4.5",
    "grunt-bower-concat": "^1.0.0",
    "grunt-bower-task": "^0.4.0",
    "grunt-cli": "^0.1.13",
    "grunt-contrib-clean": "^1.0.0",
    "grunt-contrib-copy": "^0.8.2",
    "grunt-contrib-cssmin": "^0.14.0",
    "grunt-contrib-uglify": "^0.11.1",
    "load-grunt-tasks": "^3.3.0",
    "snyk": "^1.9.1",
    "stylelint": "^7.2.0",
    "xo": "^0.17.1"
  },
  "xo": {
    "space": 4,
    "rules": {
      "space-before-function-paren": [
        "error",
        "never"
      ]
    },
    "envs": [
      "browser",
      "jquery"
    ],
    "globals": [
      "PNotify",
      "LazyLoad",
      "_",
      "log",
      "MEDUSA",
      "api",
      "apiKey",
      "apiRoot"
    ],
    "ignores": [
      "static/js/lib/**",
      "static/js/*.min.js",
      "static/js/vender.js",
      "static/js/api.js"
    ]
  },
  "stylelint": {
    "extends": "./.build/node_modules/stylelint-config-standard",
    "rules": {
      "indentation": [
        4,
        {
          "ignore": [
            "block"
          ],
          "message": "Please use 4 spaces for indentation. Tabs make OmgImAlexis sad.",
          "severity": "error"
        }
      ]
    }
  }
}
