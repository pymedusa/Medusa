{
  "extends": [
    "config:base"
  ],
  "baseBranches": [
    "develop"
  ],
  "ignorePaths": [
    ".build/**",
    "themes/**",
    "ext/**",
    "lib/**"
  ],
  "js": {
    "labels": ["Update dep (JS)"],
    "packageRules": [
      {
        "packageNames": ["bootstrap"],
        "allowedVersions": "<4"
      },
      {
        "packageNames": [
          "vue",
          "vue-template-compiler",
          "@vue/test-utils"
        ],
        "groupName": "vue-base"
      },
      {
        "packagePatterns": [
          "^@babel/",
          "^babel-",
          "-babel$"
        ],
        "groupName": "babel"
      }
    ]
  },
  "python": {
    "labels": ["Update dep (Py)"],
    "ignoreDeps": [
      "guessit"
    ],
    "packageRules": [
      {
        "packageNames": ["tornado"],
        "allowedVersions": "<6"
      }
    ]
  }
}
