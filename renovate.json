{
  "extends": [
    "config:base"
  ],
  "prHourlyLimit": 2,
  "rebaseWhen": "conflicted",
  "baseBranches": [
    "develop"
  ],
  "ignorePaths": [
    ".build/**",
    "themes/**",
    "{lib,ext}*/**"
  ],
  "js": {
    "commitMessageAction": "Update JS",
    "managerBranchPrefix": "js/",
    "labels": ["Update dep (JS)"],
    "packageRules": [
      {
        "packageNames": ["bootstrap"],
        "allowedVersions": "<4"
      },
      {
        "packageNames": ["jquery"],
        "allowedVersions": ">=3.5.1"
      },
      {
        "packageNames": [
          "vue",
          "vue-template-compiler",
          "@vue/test-utils",
          "vue-jest"
        ],
        "groupName": "vue-base"
      }
    ]
  },
  "python": {
    "commitMessageAction": "Update Python",
    "managerBranchPrefix": "py/",
    "labels": ["Update dep (Py)"],
    "packageRules": [
      {
        "packageNames": ["tornado"],
        "allowedVersions": "<6"
      },
      {
        "packageNames": ["PyGithub"],
        "allowedVersions": "<=1.45"
      },
      {
        "packageNames": ["rarfile"],
        "allowedVersions": "<=3.1"
      }, 
      {
        "packageNames": ["dogpile.cache"],
        "allowedVersions": "<1"
      },
      {
        "packageNames": ["validators"],
        "allowedVersions": "<0.16.0"
      }
    ]
  }
}
