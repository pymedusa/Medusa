{
  "manifest_version": 1,
  "version": "0.1.0",
  "name": "slim",
  "author": "p0psicles",
  "scripts": {
    "lint": "xo",
    "lint-css": "stylelint ./static/css/*.css ./src/components/**/*.vue",
    "dev": "webpack --mode development",
    "build": "webpack --mode production",
    "install": "yarn run lint",
    "test": "cross-env NODE_ENV=test nyc ava",
    "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov -F frontend"
  },
  "config": {
    "cssThemes": {
      "light": {
        "name": "light",
        "css": "light.css",
        "dest": "../../themes/light"
      },
      "dark": {
        "name": "dark",
        "css": "dark.css",
        "dest": "../../themes/dark"
      }
    }
  },
  "dependencies": {},
  "devDependencies": {
    "@babel/core": "7.2.2",
    "@babel/plugin-proposal-object-rest-spread": "7.2.0",
    "@babel/plugin-syntax-dynamic-import": "7.2.0",
    "@babel/polyfill": "7.2.5",
    "@babel/preset-env": "7.2.3",
    "@babel/register": "7.0.0",
    "@mapbox/stylelint-processor-arbitrary-tags": "0.2.0",
    "@vue/test-utils": "1.0.0-beta.28",
    "ava": "1.1.0",
    "axios": "0.18.0",
    "babel-eslint": "10.0.1",
    "babel-loader": "8.0.5",
    "babel-plugin-istanbul": "5.1.0",
    "bootstrap": "3.4.0",
    "browser-env": "3.2.5",
    "clean-webpack-plugin": "1.0.0",
    "codecov": "3.1.0",
    "copy-webpack-plugin": "4.6.0",
    "cross-env": "5.2.0",
    "css-loader": "2.1.0",
    "date-fns": "1.30.1",
    "eslint": "5.12.1",
    "eslint-config-xo": "0.26.0",
    "eslint-plugin-vue": "5.1.0",
    "esm": "3.0.84",
    "file-loader": "3.0.1",
    "filemanager-webpack-plugin": "2.0.5",
    "glob": "7.1.3",
    "gulp": "4.0.0",
    "gulp-changed": "3.2.0",
    "gulp-imagemin": "5.0.3",
    "imagemin-pngquant": "7.0.0",
    "is-visible": "2.2.0",
    "jquery": "3.3.1",
    "lodash": "4.17.11",
    "mini-css-extract-plugin": "0.5.0",
    "nyc": "13.1.0",
    "optimize-css-assets-webpack-plugin": "5.0.1",
    "require-extension-hooks": "0.3.3",
    "require-extension-hooks-babel": "1.0.0-beta.1",
    "require-extension-hooks-vue": "2.0.0",
    "stylelint": "9.10.0",
    "stylelint-config-standard": "18.2.0",
    "tablesorter": "2.31.1",
    "vue": "2.5.22",
    "vue-async-computed": "3.5.1",
    "vue-js-toggle-button": "1.3.1",
    "vue-loader": "15.5.1",
    "vue-meta": "1.5.8",
    "vue-native-websocket": "2.0.12",
    "vue-router": "3.0.2",
    "vue-scrollto": "2.13.0",
    "vue-snotify": "3.2.1",
    "vue-template-compiler": "2.5.22",
    "vue-truncate-collapsed": "2.1.0",
    "vuex": "3.1.0",
    "webpack": "4.28.4",
    "webpack-cli": "3.2.1",
    "xo": "0.24.0"
  },
  "xo": {
    "space": 4,
    "extends": [
      "plugin:vue/essential"
    ],
    "extensions": [
      "vue"
    ],
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "rules": {
      "object-curly-spacing": [
        "error",
        "always"
      ],
      "space-before-function-paren": [
        "error",
        {
          "anonymous": "never",
          "named": "never",
          "asyncArrow": "always"
        }
      ],
      "valid-jsdoc": [
        "error"
      ],
      "padding-line-between-statements": "off"
    },
    "envs": [
      "browser"
    ],
    "globals": [
      "PNotify",
      "LazyLoad",
      "_",
      "$",
      "MEDUSA",
      "api",
      "apiv1",
      "apiRoute",
      "jQuery",
      "axios",
      "webRoot",
      "apiRoot",
      "apiKey",
      "Vuex"
    ],
    "ignores": [
      "static/js/lib/**",
      "static/js/*.min.js",
      "static/js/vender.js"
    ],
    "overrides": [
      {
        "files": "src/**",
        "globals": [
          "$",
          "MEDUSA"
        ]
      }
    ],
    "esnext": true
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "processors": [
      [
        "@mapbox/stylelint-processor-arbitrary-tags",
        {
          "fileFilterRegex": [
            ".vue$"
          ]
        }
      ]
    ],
    "rules": {
      "indentation": [
        4,
        {
          "ignore": [
            "inside-parens"
          ],
          "message": "Please use 4 spaces for indentation.",
          "severity": "error"
        }
      ],
      "no-empty-source": null,
      "no-descending-specificity": null
    },
    "ignoreFiles": [
      "static/css/lib/**",
      "static/css/*.min.css"
    ]
  },
  "ava": {
    "require": [
      "esm",
      "@babel/register",
      "@babel/polyfill",
      "./test/helpers/setup.js"
    ],
    "files": [
      "test/specs/**/*.spec.js"
    ],
    "sources": [
      "src/**/*.vue",
      "src/**/*.js"
    ],
    "concurrency": 5,
    "failWithoutAssertions": true,
    "powerAssert": true
  },
  "nyc": {
    "require": [
      "@babel/register",
      "@babel/polyfill"
    ],
    "sourceMap": false,
    "instrument": false,
    "extension": [
      ".vue"
    ],
    "include": [
      "src/**/*.vue",
      "src/**/*.js"
    ],
    "reporter": [
      "lcov",
      "text"
    ]
  }
}
